<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bulding"
    android:orientation="vertical"
    tools:context=".Login_6_wsdActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="135.7dp"
            android:src="@drawable/sffont1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/rect_white1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_marginTop="10dp">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/user"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="UserName"
                    android:inputType="text"
                    android:layout_marginLeft="15.5dp"
                    android:textSize="15.4sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="#E6ffffff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_marginTop="10dp">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/pass"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="Password"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:layout_marginLeft="15.5dp"
                    android:textSize="15.4sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"/>
            </LinearLayout>

        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="55.4dp"
        android:background="@drawable/rect_whitefull2"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:padding="19dp"
        android:text="SIGN IN"
        android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="15.4sp"
        android:fontFamily="@font/roboto_light"/>

</RelativeLayout>